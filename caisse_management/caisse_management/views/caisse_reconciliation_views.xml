<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Caisse Reconciliation Form View -->
    <record id="view_caisse_reconciliation_form" model="ir.ui.view">
        <field name="name">caisse.reconciliation.form</field>
        <field name="model">caisse.reconciliation</field>
        <field name="type">form</field>
        <field name="priority">1</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form string="Caisse Reconciliation">
                <header>
                    <button name="action_load_opening_balance" type="object" string="Load Opening Balance"
                            invisible="state != 'draft'"
                            groups="caisse_management.group_caisse_cashier"/>
                    <button name="action_calculate_denominations" type="object" string="Calculate from Denominations"
                            invisible="state != 'draft'"
                            groups="caisse_management.group_caisse_cashier"/>
                    <button name="action_reconcile" type="object" string="Complete Reconciliation"
                            class="oe_highlight" invisible="state != 'draft'"
                            groups="caisse_management.group_caisse_cashier"/>
                    <button name="action_close" type="object" string="Close Period"
                            class="oe_highlight" invisible="state != 'reconciled'"
                            groups="caisse_management.group_caisse_manager"/>
                    <button name="action_reopen" type="object" string="Reopen"
                            invisible="state != 'closed'"
                            groups="caisse_management.group_caisse_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,reconciled,closed" statusbar_colors='{"cancelled":"red"}'/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_disbursements" type="object"
                                class="oe_stat_button" icon="fa-list">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="disbursement_count"/></span>
                                <span class="o_stat_text">Disbursements</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <group>
                        <group name="period_info" string="Period Information">
                            <field name="reconciliation_type" readonly="state != 'draft'"/>
                            <field name="reconciliation_date" readonly="state != 'draft'"/>
                            <field name="period_from" readonly="state != 'draft'"/>
                            <field name="period_to" readonly="state != 'draft'"/>
                        </group>
                        <group name="responsible_info" string="Responsible">
                            <field name="cashier_id" readonly="state != 'draft'"/>
                            <field name="supervisor_id" readonly="state not in ['reconciled', 'draft']"/>
                            <field name="config_id" readonly="1"/>
                            <field name="journal_id" readonly="1"/>
                        </group>
                    </group>

                    <!-- Balance Information -->
                    <group string="Balance Information">
                        <group name="calculated_balances">
                            <field name="opening_balance" widget="monetary" readonly="state != 'draft'"/>
                            <field name="total_disbursements" widget="monetary" readonly="1"/>
                            <field name="total_receipts" widget="monetary" readonly="1"/>
                            <field name="calculated_balance" widget="monetary" readonly="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group name="actual_balances">
                            <field name="actual_balance" widget="monetary" readonly="state != 'draft'"/>
                            <field name="variance" widget="monetary" readonly="1"/>
                        </group>
                    </group>

                    <!-- Variance Alert -->
                    <div class="alert alert-warning" role="alert" invisible="variance == 0">
                        <strong>Variance Detected!</strong> There is a difference between calculated and actual balance.
                        Please review and provide explanation below.
                    </div>

                    <!-- Cash Denominations -->
                    <notebook>
                        <page string="Cash Denominations" name="denominations">
                            <field name="denomination_line_ids" readonly="state not in ['draft']">
                                <list editable="bottom">
                                    <field name="denomination" widget="monetary"/>
                                    <field name="quantity"/>
                                    <field name="subtotal" widget="monetary" readonly="1"/>
                                    <field name="currency_id" invisible="1"/>
                                </list>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="actual_balance" widget="monetary" readonly="1"/>
                            </group>
                        </page>

                        <page string="Notes &amp; Comments" name="notes">
                            <group>
                                <field name="reconciliation_notes" nolabel="1" placeholder="General reconciliation notes..." readonly="state not in ['draft', 'reconciled']"/>
                            </group>
                            <group invisible="variance == 0" string="Variance Explanation">
                                <field name="variance_explanation" nolabel="1" placeholder="Explain the variance between calculated and actual balance..." readonly="state not in ['draft', 'reconciled']"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Caisse Reconciliation Tree View -->
    <record id="view_caisse_reconciliation_tree" model="ir.ui.view">
        <field name="name">caisse.reconciliation.tree</field>
        <field name="model">caisse.reconciliation</field>
        <field name="arch" type="xml">
            <list string="Caisse Reconciliations" decoration-info="state=='draft'"
                  decoration-warning="variance!=0" decoration-success="state=='closed'">
                <field name="name"/>
                <field name="reconciliation_date"/>
                <field name="reconciliation_type"/>
                <field name="period_from"/>
                <field name="period_to"/>
                <field name="opening_balance" widget="monetary"/>
                <field name="calculated_balance" widget="monetary"/>
                <field name="actual_balance" widget="monetary"/>
                <field name="variance" widget="monetary"/>
                <field name="cashier_id"/>
                <field name="state" widget="badge"
                       decoration-info="state=='draft'"
                       decoration-warning="state=='reconciled'"
                       decoration-success="state=='closed'"/>
                <field name="currency_id" invisible="1"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Caisse Reconciliation Kanban View -->
    <record id="view_caisse_reconciliation_kanban" model="ir.ui.view">
        <field name="name">caisse.reconciliation.kanban</field>
        <field name="model">caisse.reconciliation</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="reconciliation_date"/>
                <field name="reconciliation_type"/>
                <field name="actual_balance"/>
                <field name="variance"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.variance.raw_value != 0 ? 'oe_kanban_color_3' : ''}">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong><br/>
                                        <small class="o_kanban_record_subtitle text-muted">
                                            <field name="reconciliation_date"/> - <field name="reconciliation_type"/>
                                        </small>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>Balance: <field name="actual_balance" widget="monetary"/></div>
                                    <t t-if="record.variance.raw_value != 0">
                                        <div class="text-warning">Variance: <field name="variance" widget="monetary"/></div>
                                    </t>
                                </div>
                                <div class="o_kanban_record_bottom">
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Caisse Reconciliation Search View -->
    <record id="view_caisse_reconciliation_search" model="ir.ui.view">
        <field name="name">caisse.reconciliation.search</field>
        <field name="model">caisse.reconciliation</field>
        <field name="arch" type="xml">
            <search string="Search Caisse Reconciliations">
                <field name="name" string="Reference"/>
                <field name="cashier_id" string="Cashier"/>
                <field name="supervisor_id" string="Supervisor"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Reconciled" name="reconciled" domain="[('state', '=', 'reconciled')]"/>
                <filter string="Closed" name="closed" domain="[('state', '=', 'closed')]"/>
                <separator/>
                <filter string="With Variance" name="with_variance" domain="[('variance', '!=', 0)]"/>
                <filter string="This Month" name="this_month"
                        domain="[('reconciliation_date', '>=', context_today().replace(day=1))]"/>
                <group expand="0" string="Group By">
                    <filter string="Cashier" name="group_cashier" context="{'group_by': 'cashier_id'}"/>
                    <filter string="Type" name="group_type" context="{'group_by': 'reconciliation_type'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'reconciliation_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Caisse Reconciliation Denomination Tree View -->
    <record id="view_caisse_reconciliation_denomination_tree" model="ir.ui.view">
        <field name="name">caisse.reconciliation.denomination.tree</field>
        <field name="model">caisse.reconciliation.denomination</field>
        <field name="arch" type="xml">
            <list string="Cash Denominations" editable="bottom">
                <field name="denomination" widget="monetary"/>
                <field name="quantity"/>
                <field name="subtotal" widget="monetary" readonly="1"/>
                <field name="currency_id" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_caisse_reconciliation" model="ir.actions.act_window">
        <field name="name">Caisse Reconciliations</field>
        <field name="res_model">caisse.reconciliation</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first caisse reconciliation
            </p>
            <p>
                Reconcile your caisse at the end of each day, week, or month.
            </p>
        </field>
    </record>

    <record id="action_caisse_reconciliation_pending" model="ir.actions.act_window">
        <field name="name">Pending Reconciliations</field>
        <field name="res_model">caisse.reconciliation</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('state', '=', 'draft')]</field>
        <field name="context">{'search_default_draft': 1}</field>
    </record>

</odoo>