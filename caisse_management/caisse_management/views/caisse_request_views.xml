<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Caisse Request Form View -->
    <record id="view_caisse_request_form" model="ir.ui.view">
        <field name="name">caisse.request.form</field>
        <field name="model">caisse.request</field>
        <field name="type">form</field>
        <field name="priority">1</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form string="Demande de Fonds">
                <header>
                    <button name="action_submit" type="object" string="Soumettre"
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_approve" type="object" string="Approuver"
                            class="oe_highlight" invisible="state != 'submitted'"
                            groups="caisse_management.group_caisse_manager"/>
                    <button name="action_reject" type="object" string="Rejeter"
                            invisible="state not in ['submitted', 'manager_approved']"
                            groups="caisse_management.group_caisse_manager"/>
                    <button name="action_disburse" type="object" string="Décaisser"
                            class="oe_highlight" invisible="state != 'manager_approved'"
                            groups="caisse_management.group_caisse_cashier"/>
                    <button name="action_cancel" type="object" string="Annuler"
                            invisible="state == 'disbursed'"
                            confirm="Êtes-vous sûr de vouloir annuler cette demande ?"/>
                    <button name="action_reset_to_draft" type="object" string="Réinitialiser en Brouillon"
                            invisible="state not in ['rejected', 'cancelled']"
                            groups="caisse_management.group_caisse_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,manager_approved,disbursed" statusbar_colors='{"rejected":"red","cancelled":"red"}'/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_disbursement" type="object"
                                class="oe_stat_button" icon="fa-money"
                                invisible="disbursement_id == False">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Voir</span>
                                <span class="o_stat_text">Décaissement</span>
                            </div>
                        </button>
                        <button name="action_view_accounting_entry" type="object"
                                class="oe_stat_button" icon="fa-book"
                                invisible="move_id == False">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">View</span>
                                <span class="o_stat_text">Journal Entry</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <group>
                        <group name="request_info" string="Request Information">
                            <field name="employee_id" readonly="state != 'draft'"/>
                            <field name="request_date" readonly="state != 'draft'"/>
                            <field name="request_type_id" readonly="state != 'draft'"/>
                            <field name="amount" widget="monetary" readonly="state != 'draft'"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="department_id" readonly="1"/>
                        </group>
                        <group name="tracking_info" string="Analytical Tracking">
                            <field name="analytic_account_id" readonly="state != 'draft'"/>
                            <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                        </group>
                    </group>

                    <group name="description_info" string="Description">
                        <field name="description" nolabel="1" readonly="state != 'draft'"/>
                    </group>

                    <!-- Settlement Information (for advances) -->
                    <group invisible="request_type_id.code != 'advance'" string="Settlement Information">
                        <group>
                            <field name="settlement_deadline" readonly="1"/>
                            <field name="days_to_settle" readonly="1"/>
                            <field name="is_overdue" readonly="1"/>
                        </group>
                        <group>
                            <field name="settlement_date" readonly="1"/>
                            <field name="settlement_amount" widget="monetary" readonly="state != 'disbursed'"/>
                        </group>
                    </group>

                    <group name="settlement_desc" invisible="request_type_id.code != 'advance'" string="Settlement Description">
                        <field name="settlement_description" nolabel="1" readonly="state != 'disbursed'"/>
                    </group>

                    <!-- Approval Information -->
                    <group string="Approval Information" invisible="state in ['draft', 'submitted']">
                        <group>
                            <field name="manager_id" readonly="1"/>
                            <field name="manager_approval_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="cashier_id" readonly="1"/>
                            <field name="disbursement_date" readonly="1"/>
                        </group>
                    </group>

                    <group name="manager_comments" invisible="state in ['draft', 'submitted']" string="Manager Comments">
                        <field name="manager_comments" nolabel="1" readonly="state not in ['submitted', 'manager_approved']"/>
                    </group>

                    <!-- Related Records -->
                    <group string="Related Records" invisible="state in ['draft', 'submitted']">
                        <field name="disbursement_id" readonly="1"/>
                        <field name="move_id" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Caisse Request Tree View -->
    <record id="view_caisse_request_tree" model="ir.ui.view">
        <field name="name">caisse.request.tree</field>
        <field name="model">caisse.request</field>
        <field name="arch" type="xml">
            <list string="Fund Requests" decoration-info="state=='draft'"
                  decoration-warning="state=='submitted'" decoration-success="state=='disbursed'"
                  decoration-danger="is_overdue==True">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="request_date"/>
                <field name="request_type_id"/>
                <field name="amount" widget="monetary"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="state" widget="badge"
                       decoration-info="state=='draft'"
                       decoration-warning="state in ['submitted', 'manager_approved']"
                       decoration-success="state=='disbursed'"
                       decoration-danger="state=='rejected'"
                       decoration-muted="state=='cancelled'"/>
                <field name="settlement_deadline"/>
                <field name="is_overdue" column_invisible="1"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Caisse Request Kanban View -->
    <record id="view_caisse_request_kanban" model="ir.ui.view">
        <field name="name">caisse.request.kanban</field>
        <field name="model">caisse.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="request_type_id"/>
                <field name="amount"/>
                <field name="currency_id"/>
                <field name="state"/>
                <field name="is_overdue"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.is_overdue.raw_value ? 'oe_kanban_color_2' : ''}">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong><br/>
                                        <small class="o_kanban_record_subtitle text-muted">
                                            <field name="employee_id"/> - <field name="request_type_id"/>
                                        </small>
                                    </div>
                                    <div class="o_kanban_manage_button_section">
                                        <a class="o_kanban_manage_toggle_button" href="#">
                                            <i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/>
                                        </a>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="amount" widget="monetary"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_right">
                                        <t t-if="record.is_overdue.raw_value">
                                            <span class="badge bg-danger">Overdue</span>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Caisse Request Search View -->
    <record id="view_caisse_request_search" model="ir.ui.view">
        <field name="name">caisse.request.search</field>
        <field name="model">caisse.request</field>
        <field name="arch" type="xml">
            <search string="Rechercher Demandes de Fonds">
                <field name="name" string="Référence"/>
                <field name="employee_id" string="Employé"/>
                <field name="request_type_id" string="Type"/>
                <field name="description" string="Description"/>
                <filter string="Mes Demandes" name="my_requests"
                        domain="[('employee_id.user_id', '=', uid)]"/>
                <separator/>
                <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Soumis" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Approuvé" name="approved" domain="[('state', '=', 'manager_approved')]"/>
                <filter string="Décaissé" name="disbursed" domain="[('state', '=', 'disbursed')]"/>
                <filter string="Réglé" name="settled" domain="[('state', '=', 'settled')]"/>
                <separator/>
                <filter string="En Retard" name="overdue" domain="[('is_overdue', '=', True)]"/>
                <filter string="Ce Mois" name="this_month"
                        domain="[('request_date', '>=', context_today().replace(day=1))]"/>
                <group expand="0" string="Grouper Par">
                    <filter string="Employé" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Type" name="group_type" context="{'group_by': 'request_type_id'}"/>
                    <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Département" name="group_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Date Demande" name="group_request_date" context="{'group_by': 'request_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_caisse_request" model="ir.actions.act_window">
        <field name="name">Demandes de Fonds</field>
        <field name="res_model">caisse.request</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre première demande de fonds
            </p>
            <p>
                Demandez des avances sur salaire, petite caisse ou autres fonds de dépenses.
            </p>
        </field>
    </record>

    <record id="action_caisse_request_manager" model="ir.actions.act_window">
        <field name="name">Demandes à Approuver</field>
        <field name="res_model">caisse.request</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('state', '=', 'submitted')]</field>
        <field name="context">{}</field>
    </record>

    <record id="action_caisse_request_cashier" model="ir.actions.act_window">
        <field name="name">Demandes à Décaisser</field>
        <field name="res_model">caisse.request</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('state', '=', 'manager_approved')]</field>
    </record>

</odoo>