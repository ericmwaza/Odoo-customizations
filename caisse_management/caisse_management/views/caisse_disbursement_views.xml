<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Caisse Disbursement Form View -->
    <record id="view_caisse_disbursement_form" model="ir.ui.view">
        <field name="name">caisse.disbursement.form</field>
        <field name="model">caisse.disbursement</field>
        <field name="type">form</field>
        <field name="priority">1</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form string="Décaissement de Caisse">
                <header>
                    <button name="action_disburse" type="object" string="Confirmer Décaissement"
                            class="oe_highlight" invisible="state != 'draft'"
                            groups="caisse_management.group_caisse_cashier"/>
                    <button name="action_cancel" type="object" string="Annuler"
                            invisible="state != 'draft'"
                            confirm="Êtes-vous sûr de vouloir annuler ce décaissement ?"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,disbursed" statusbar_colors='{"cancelled":"red"}'/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_accounting_entry" type="object"
                                class="oe_stat_button" icon="fa-book"
                                invisible="move_id == False">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">View</span>
                                <span class="o_stat_text">Journal Entry</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <group>
                        <group name="disbursement_info" string="Disbursement Information">
                            <field name="request_id" readonly="state != 'draft'"/>
                            <field name="employee_id" readonly="state != 'draft'"/>
                            <field name="disbursement_date" readonly="state != 'draft'"/>
                            <field name="amount" widget="monetary" readonly="state != 'draft'"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group name="payment_info" string="Payment Information">
                            <field name="payment_method" readonly="state != 'draft'"/>
                            <field name="bank_account_id" invisible="payment_method != 'bank_transfer'" readonly="state != 'draft'"/>
                            <field name="check_number" invisible="payment_method != 'check'" readonly="state != 'draft'"/>
                            <field name="journal_id" readonly="state != 'draft'"/>
                        </group>
                    </group>

                    <group name="tracking_info" string="Tracking Information">
                        <group>
                            <field name="analytic_account_id" readonly="state != 'draft'"/>
                            <field name="department_id" readonly="1"/>
                            <field name="request_type_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="cashier_id" readonly="1"/>
                            <field name="authorized_by" readonly="1"/>
                            <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                        </group>
                    </group>

                    <group name="description_info" string="Description">
                        <field name="description" nolabel="1" readonly="state != 'draft'"/>
                    </group>

                    <group name="notes_info" string="Internal Notes">
                        <field name="notes" nolabel="1" readonly="state != 'draft'"/>
                    </group>

                    <!-- Accounting Information -->
                    <group string="Accounting Information" invisible="move_id == False">
                        <field name="move_id" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Caisse Disbursement Tree View -->
    <record id="view_caisse_disbursement_tree" model="ir.ui.view">
        <field name="name">caisse.disbursement.tree</field>
        <field name="model">caisse.disbursement</field>
        <field name="arch" type="xml">
            <list string="Décaissements de Caisse" decoration-info="state=='draft'" decoration-success="state=='disbursed'">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="disbursement_date"/>
                <field name="amount" widget="monetary"/>
                <field name="currency_id" invisible="1"/>
                <field name="payment_method"/>
                <field name="request_type_id"/>
                <field name="cashier_id"/>
                <field name="state" widget="badge"
                       decoration-info="state=='draft'"
                       decoration-success="state=='disbursed'"
                       decoration-muted="state=='cancelled'"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Caisse Disbursement Kanban View -->
    <record id="view_caisse_disbursement_kanban" model="ir.ui.view">
        <field name="name">caisse.disbursement.kanban</field>
        <field name="model">caisse.disbursement</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="amount"/>
                <field name="currency_id"/>
                <field name="payment_method"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong><br/>
                                        <small class="o_kanban_record_subtitle text-muted">
                                            <field name="employee_id"/> - <field name="payment_method"/>
                                        </small>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="amount" widget="monetary"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Caisse Disbursement Search View -->
    <record id="view_caisse_disbursement_search" model="ir.ui.view">
        <field name="name">caisse.disbursement.search</field>
        <field name="model">caisse.disbursement</field>
        <field name="arch" type="xml">
            <search string="Search Cash Disbursements">
                <field name="name" string="Reference"/>
                <field name="employee_id" string="Employee"/>
                <field name="cashier_id" string="Cashier"/>
                <field name="payment_method" string="Payment Method"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Disbursed" name="disbursed" domain="[('state', '=', 'disbursed')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <filter string="Today" name="today"
                        domain="[('disbursement_date', '=', context_today())]"/>
                <filter string="This Week" name="this_week"
                        domain="[('disbursement_date', '>=', (context_today() - 7))]"/>
                <filter string="This Month" name="this_month"
                        domain="[('disbursement_date', '>=', context_today().replace(day=1))]"/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Cashier" name="group_cashier" context="{'group_by': 'cashier_id'}"/>
                    <filter string="Payment Method" name="group_payment_method" context="{'group_by': 'payment_method'}"/>
                    <filter string="Request Type" name="group_request_type" context="{'group_by': 'request_type_id'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Disbursement Date" name="group_disbursement_date" context="{'group_by': 'disbursement_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_caisse_disbursement" model="ir.actions.act_window">
        <field name="name">Cash Disbursements</field>
        <field name="res_model">caisse.disbursement</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No disbursements yet
            </p>
            <p>
                Disbursements are created automatically when requests are approved.
            </p>
        </field>
    </record>

    <record id="action_caisse_disbursement_pending" model="ir.actions.act_window">
        <field name="name">Pending Disbursements</field>
        <field name="res_model">caisse.disbursement</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('state', '=', 'draft')]</field>
        <field name="context">{'search_default_draft': 1}</field>
    </record>

</odoo>