<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_employee_form_inherit_payroll_listings" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.payroll_listings</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='address_id']" position="after">
                <field name="x_employee_no"/>
                <field name="x_employee_status"/>
            </xpath>
        </field>
    </record>

    <record id="view_employee_tree_inherit_payroll_listings" model="ir.ui.view">
        <field name="name">hr.employee.tree.inherit.payroll_listings</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='work_phone']" position="after">
                <field name="x_employee_no" optional="show"/>
                <field name="x_employee_status" optional="show"/>
            </xpath>
        </field>
    </record>

</odoo>
